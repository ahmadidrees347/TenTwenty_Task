<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TenTwentyTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:networkSecurityConfig" tools:targetApi="n">@xml/security_config</item>
        <item name="android:usesCleartextTraffic" tools:targetApi="m">true</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="textMedStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="textMedBlackStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="btnStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnStrokeStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/light_blue</item>
        <item name="icon">@drawable/ic_play</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>